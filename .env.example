# Smart Support Ticket Router - Environment Variables
# Copy this file to .env and update with your values

# API Configuration
API_TOKENS=test-token-123,another-token-456
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sstr_db
DB_USER=sstr_user
DB_PASSWORD=changeme123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ticket_classification

# Model Configuration
MODEL_PATH=models/saved_models
CLASSIFIER_MODEL=classifier_v1.pkl
VECTORIZER_MODEL=vectorizer_v1.pkl
FORECASTER_MODEL=forecaster_v1.pkl

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Monitoring
ENABLE_MONITORING=true
ENABLE_DRIFT_DETECTION=true

# Feature Flags
ENABLE_CACHING=true
ENABLE_ASYNC_PREDICTIONS=false

# AWS Configuration (if using cloud services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=sstr-models

# Google Cloud Configuration (if using)
GCP_PROJECT_ID=your-project-id
GCP_SERVICE_ACCOUNT_KEY=path/to/key.json

# Logging
LOG_FILE_PATH=logs/sstr.log
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Development Settings
DEBUG=true
TESTING=false
ENVIRONMENT=development